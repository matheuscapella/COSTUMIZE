
<body style = "background-color: #94b8b8">
  <div class="container">
    <h2 class = text-center>All Costumes</h2>

      <ul>
        <% @costumes.each do |costume| %>
          <li>
            <% if costume.photo.attached? %>
              <%= cl_image_tag costume.photo.key, height: 500, width: 400 %>
            <% end %>

            <h5><%= costume.title %></h5>
            <p>$<%= costume.price %></p>
          </li>
        <% end %>
      </ul>

  </div>
</body>


