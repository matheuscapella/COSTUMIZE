<body style = "background-color: #94b8b8">
  <div class="container">
    <h2 class = text-center>All Costumes</h2>
        <% @costumes.each do |costume| %>
            <h5><%= costume.title %></h5>
            <p>$<%= costume.price %></p>
             <p><%= link_to 'Delete', costume_path(costume), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></p>
              <% if costume.photo.attached? %>
              <%= link_to costume_path(costume) do %>
              <%= cl_image_tag costume.photo.key, height: 500, width: 400 %>
            <% end %>
            <% end %>
        <% end %>
        <%= link_to "Create a new costume", new_costume_path  %>

  </div>
</body>


