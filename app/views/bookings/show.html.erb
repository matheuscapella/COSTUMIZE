<body style = "background-color: #142545">

  <div class="container py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-9 col-lg-7 col-xl-5">
        <div class="card border border-success border-2">
          <h3 class= "text-center m-2 pt-2">You're almost there!</h3>
          <%= cl_image_tag @booking.costume.photo.key, class: "img-fluid"%>
          <p class= "ps-3 pt-2 mb-0 fs-5">Booking dates:</p>
          <p class= "ps-3 fs-6"><%= @booking.start_date%> through <%= @booking.end_date%></p>

          <div class="card-body">
            <div class="card-title d-flex justify-content-between mb-0">
              <p class="mb-0"><%= @booking.costume.title %></p>
              <p class="mb-0">$ <%= @booking.costume.price %></p>
            </div>
          </div>
          <div class="rounded-bottom" style="background-color: #eee;">
            <div class="card-body">
              <p class="mb-4">Your payment details</p>

              <div class="form-outline mb-3">
                <input type="text" id="formControlLgXM8" class="form-control"
                  placeholder="1234 5678 1234 5678" />
                <label class="form-label" for="formControlLgXM8">Card Number</label>
              </div>

              <div class="row mb-3">
                <div class="col-6">
                  <div class="form-outline">
                    <input type="password" id="formControlLgExpk8" class="form-control"
                      placeholder="MM/YYYY" />
                    <label class="form-label" for="formControlLgExpk8">Expire</label>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-outline">
                    <input type="password" id="formControlLgcvv8" class="form-control" placeholder="CVV" />
                    <label class="form-label" for="formControlLgcvv8">CVV</label>
                  </div>
                </div>
              </div>
               <%=link_to "Submit Order", costumes_path, class: "btn btn-info"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
